<Page x:Class="TRPO_pr12.Pages.UserFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_pr12.Pages"
      xmlns:validations="clr-namespace:TRPO_pr12.Validations"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserFormPage">

    <Grid>
        <StackPanel>
            <StackPanel>
                <Label>Логин</Label>
                <TextBox Text="{Binding Login}"/>
                <StackPanel>
                    <TextBox x:Name="login">
                        <TextBox.Text >
                            <Binding Path="Login">
                                <Binding.ValidationRules>
                                    <validations:LoginValidation/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding ElementName=login, Path=(Validation.Errors)}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <Label>Имя пользователя</Label>
                <TextBox Text="{Binding Name}"/>
            </StackPanel>
            <StackPanel>
                <Label>Электронная почта                </Label>
                <StackPanel>
                    <TextBox x:Name="email">
                        <TextBox.Text >
                            <Binding Path="Email">
                                <Binding.ValidationRules>
                                    <validations:EmailValidation/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding ElementName=email, Path=(Validation.Errors)}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <Label>Пароль пользователя                </Label>
                <StackPanel>
                    <TextBox x:Name="password">
                        <TextBox.Text >
                            <Binding Path="Password">
                                <Binding.ValidationRules>
                                    <validations:PasswordValidation/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding ElementName=password, Path=(Validation.Errors)}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <Label>Дата и время создания пользователя</Label>
                <StackPanel>
                    <TextBox x:Name="date">
                        <TextBox.Text >
                            <Binding Path="CreatedAt">
                                <Binding.ValidationRules>
                                    <validations:DateValidation/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding ElementName=date, Path=(Validation.Errors)}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <Button Click="save">Сохранить в БД</Button>
                <Button Click="back">Назад</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
